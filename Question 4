#include <iostream> 
#include <fstream> 
#include <string> 
using namespace std; 

struct SalesRecord { 
    string month; 
    float amount; 
}; 

int main() { 
    SalesRecord sales[12]; 
    float total = 0; 
    for (int i=0;i<12;i++){ 
        cout<<"Month: "; 
        cin>>sales[i].month; 
        cout<<"Amount: "; 
        cin>>sales[i].amount; 
        total = total + sales[i].amount; 
    } 
    
    ofstream out("sales_data.txt"); 
    for (int i=0;i<12;i++){ 
        out<<sales[i].month<<" "<<sales[i].amount<<endl; 
    } 
    out.close(); 
    
    ifstream in("sales_data.txt"); 
    SalesRecord s[12]; 
    int j=0; 
    while(in>>s[j].month>>s[j].amount){ 
        j++; 
    } 
    in.close(); 
    
    float avg=total/12; 
    cout<<"Yearly Average: "<<avg<<endl; 
    cout<<"Months with sales above yearly average: "<<endl; 
    for (int i=0; i<12; i++) { 
        if (s[i].amount > avg){ 
            cout<<s[i].month<<endl; 
        }
    } 
    return 0; 
}
